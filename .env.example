# Noveum Trace SDK - Environment Variables Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Core Configuration (Required for basic functionality)
# ============================================================================

# Your Noveum API key for authentication
# Required for sending traces to Noveum platform
NOVEUM_API_KEY=your-api-key-here

# Project name/identifier for organizing traces
# Required for identifying which project traces belong to
NOVEUM_PROJECT=your-project-name

# Environment name (e.g., "development", "staging", "production")
# Used to filter and organize traces by environment
NOVEUM_ENVIRONMENT=development

# API endpoint URL (optional, defaults to https://api.noveum.ai/api)
# Override this to use a custom endpoint or self-hosted instance
NOVEUM_ENDPOINT=https://api.noveum.ai/api

# ============================================================================
# Debug & Logging Configuration
# ============================================================================

# Enable debug mode (set to "true", "1", or "yes" to enable)
# When enabled, enables debug logging and additional diagnostic information
NOVEUM_DEBUG=false

# Explicit log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Overrides other debug flags if set. Takes precedence over NOVEUM_DEBUG, NOVEUM_VERBOSE, NOVEUM_DEBUG_LOGS
NOVEUM_LOG_LEVEL=INFO

# Enable verbose/debug logging (set to "true", "1", "yes", or "on" to enable)
# Enables DEBUG log level for SDK logging
NOVEUM_VERBOSE=false

# Enable debug logs (set to "true", "1", "yes", or "on" to enable)
# Alternative flag to enable DEBUG log level for SDK logging
NOVEUM_DEBUG_LOGS=false

# ============================================================================
# Agent Registry Limits (Optional, for advanced multi-agent systems)
# ============================================================================

# Maximum number of agents that can be registered (default: 1000)
# Prevents unbounded growth of agent registry in memory
NOVEUM_MAX_AGENTS=1000

# Maximum number of agent graphs that can be registered (default: 100)
# Limits the number of LangGraph agent graphs tracked
NOVEUM_MAX_AGENT_GRAPHS=100

# Maximum number of agent workflows that can be registered (default: 100)
# Limits the number of agent workflows tracked
NOVEUM_MAX_AGENT_WORKFLOWS=100
